@model MVC.Models.mvcBudget
@{
    ViewBag.Title = "AddOrEdit";
}

<h2>AddOrEdit</h2>
<div class="form-body">

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.BudgetId)

        <div class="form-group">
            @Html.LabelFor(model => model.BudgetName)
            @Html.EditorFor(model => model.BudgetName)
            @Html.ValidationMessageFor(model => model.BudgetName)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Money_Limit)
            @Html.EditorFor(model => model.Money_Limit)
            @Html.ValidationMessageFor(model => model.Money_Limit)
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn button" />
            <input type="reset" value="Reset" class="btn button" />


        </div>
    }

</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval");

}